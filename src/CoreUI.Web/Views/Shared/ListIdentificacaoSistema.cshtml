@model IEnumerable<IdentificacaoSistema>

<div class="row my-3 px-3">
    <a asp-action="AddIdSistema" class="btn btn-primary btn-sm">
        <i class="fa fa-plus"></i>
    </a>
</div>
<div>
    <div>
        <i class="fa fa-align-justify"></i>
        Identificações do Sistema
    </div>
    <br />
    <div>
        <table class="table table-sm">
            <thead class="thead-light">
                <tr>
                    <th class="nowrap">ID Sistema</th>
                    <th class="nowrap">Domínio Principal</th>
                    <th class="nowrap">Endereço Integrações</th>
                    <th class="nowrap">Versão App</th>
                    <th class="nowrap">Localização Principal</th>
                    <th class="nowrap"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="nowrap">
                        @Html.DisplayFor(modelItem => item.IDSistema)
                    </td>
                    <td class="nowrap">
                        @Html.DisplayFor(modelItem => item.DominioPrincipal)
                    </td>
                    <td class="nowrap">
                        @Html.DisplayFor(modelItem => item.EnderecoIntegracoes)
                    </td>
                    <td class="nowrap">
                        @Html.DisplayFor(modelItem => item.Versao)
                    </td>
                    <td class="nowrap">
                        @Html.DisplayFor(modelItem => item.Localizacao.Descricao)
                    </td>
                    <td class="nowrap float-right">
                        <a asp-action="EditIdSistema" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a asp-action="DeleteIdSistema" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="fa fa-minus"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style type="text/css">
    .nowrap {
        white-space: nowrap;
    }

    .alnright {
    }
</style>
