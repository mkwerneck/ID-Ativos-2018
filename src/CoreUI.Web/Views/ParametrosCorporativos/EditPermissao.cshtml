@model Permissao

@{
    ViewData["Title"] = "Editar Permissão de Usuários";
}

<form method="post" asp-action="EditPermissao" enctype="multipart/form-data">

    <div class="card">
        <div class="card-header">
            <strong>Editar Permissão de Usuários</strong>
        </div>
        <label asp-for="Id" hidden></label>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="NomePermissao" class="col-md-6 col-form-label"></label>
                <div class="col-md-6">
                    <input asp-for="NomePermissao" class="form-control" />
                    <span asp-validation-for="NomePermissao" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="OK" class="btn btn-default" />
            </div>
        </div>
    </div>

</form>